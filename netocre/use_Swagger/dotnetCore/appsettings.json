{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "IssueJwtConfig": {
    "Iss": "",
    "Aud": "",
    "Secret": ""
  },
  "AllowedHosts": "*",
  "Security": {
    "EnableRequestSizeLimit": true,
    "MaxRequestBodySizeBytes": 26214,

    "EnableXssRequestFilter": true,
    "XssScanBytesLimit": 65536,
    "XssAction": "Sanitize",
    "XssContentTypes": "application/json,application/x-www-form-urlencoded,text/plain",
    "XssCaseInsensitive": true,

    "XssDangerTokens": "<script,</script,</ script,script>,javascript:,onerror=,onload=,onfocus=,onmouseover=,<img,src=,document.cookie,</iframe,</ object,</embed",


    "EnableGlobalException": true,
    "EnableOriginValidation": true,
    "AllowedOrigins": [
      "http://www.example.com",
      "http://localhost:3000",
      "https://localhost:5001"
    ],
    "OriginIgnoreCase": true,
    "EnableSecurityHeaders": true
  }
}
