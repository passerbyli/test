{
    "manifest_version": 3,
    "name": "XHR Tracker",
    "version": "1.0",
    "permissions": [
        "scripting",
        "webRequest",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-script.js"
            ],
            "css": [
                "style.css"
            ],
            "run_at": "document_start"
        }
    ]
}