<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <!-- 操作日志文件：写入到 operational.log -->
    <target xsi:type="File" name="operationalFile" fileName="logs/operational.log" 
            layout="${longdate}|${threadid}|${level:uppercase=true}|${logger}|${message}" />
  </targets>

  <rules>
    <!-- 操作日志规则 -->
    <logger name="OperationalLogger" minlevel="Info" writeTo="operationalFile" />
  </rules>
</nlog>